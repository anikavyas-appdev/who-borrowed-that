<div>
  <div>
    <h1>
      List of all borrowers
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new borrower
    </h2>

    <form action="/insert_borrower" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create borrower
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_borrowers.each do |a_borrower| %>
      <tr>
        <td>
          <%= a_borrower.id %>
        </td>

        <td>
          <%= a_borrower.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_borrower.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_borrower.updated_at) %> ago
        </td>

        <td>
          <a href="/borrowers/<%= a_borrower.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
