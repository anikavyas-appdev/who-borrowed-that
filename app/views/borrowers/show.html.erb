<div>
  <div>
    <h1>
      Clothes <%= @the_borrower.name %> borrowed!
    </h1>

    <div>
      <div>
        <a href="/borrowers">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_borrower/<%= @the_borrower.id %>">
          Delete borrower
        </a>
      </div>
    </div>

  <% if @the_borrower.items.count == 0%>
    <p> <%= @the_borrower.name%> borrowed no clothes! </p>
  <% else %>

  <div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Category
        </th>

        <th>
          Image
        </th>

        <th>
          Returned?
        </th>

        <th>
        </th>
      </tr>

      <% @the_borrower.items.each do |an_item| %>
      <tr>
        <td>
          <%= an_item.id %>
        </td>

        <td>
          <%= an_item.description %>
        </td>

        <td>
          <%= an_item.category.category %>
        </td>

        <td>
          <img src="<%= an_item.image_link %>" 
          width="300" 
          height=auto>
        </td>

        <td>
          <a href="/delete_item/<%= an_item.id %>">
            Item has been returned
          </a>
        </td>

        <td>
          <a href="/items/<%= an_item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

  </div>
</div>

<hr>

<% end %>


<div>
  <div>
    <h2>
      Edit borrower name
    </h2>

    <form action="/modify_borrower/<%= @the_borrower.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_borrower.name %>">
      </div>

      <button>
        Update borrower
      </button>
    </form>
  </div>
</div>

<hr>
